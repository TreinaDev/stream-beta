<%= form_with model: [@subscription_plan, @subscription_plan_value] do |f| %>
  <div class="row g-3">
    <div class="col-md">
      <div class="form-floating mb-3">
        <%= f.number_field :value, placeholder: :value, class: "form-control" %>
        <%= f.label :value %>
      </div>
    </div>
    <div class="col-md">
      <div class="form-floating mb-3">
        <%= f.date_field :start_date, placeholder: :start_date, class: "form-control" %>
        <%= f.label :start_date %>
      </div>
    </div>
    <div class="col-md">
      <div class="form-floating mb-3">
        <%= f.date_field :end_date, placeholder: :end_date, class: "form-control" %>
        <%= f.label :end_date %>
      </div>
    </div>
  </div>

  <%= f.submit data: { disable_with: t('messages.sending') }, class: "btn btn-primary mt-3 mb-3" %>
<% end %>
