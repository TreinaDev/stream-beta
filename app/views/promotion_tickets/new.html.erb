<h2><%= t('.title') %></h2>

<%= form_with model: @promotion_ticket do |f| %>
  <div class="form-floating mb-3">
    <%= f.text_field :title, placeholder: :title, class: "form-control" %>
    <%= f.label :title %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :discount, placeholder: :discount, class: "form-control" %>
    <%= f.label :discount %>
  </div>
  <div class="form-floating mb-3">
    <%= f.number_field :maximum_value_reduction, placeholder: :maximum_value_reduction, class: "form-control" %>
    <%= f.label :maximum_value_reduction %>
  </div>
  <div class="form-floating mb-3">
    <%= f.number_field :maximum_uses, placeholder: :maximum_uses, class: "form-control" %>
    <%= f.label :maximum_uses %>
  </div>
  <div class="form-floating mb-3">
    <%= f.date_field :start_date, placeholder: :start_date, class: "form-control" %>
    <%= f.label :start_date %>
  </div>
  <div class="form-floating mb-3">
    <%= f.date_field :end_date, placeholder: :end_date, class: "form-control" %>
    <%= f.label :end_date %>
  </div>
  <%= f.submit %>
<% end %>
