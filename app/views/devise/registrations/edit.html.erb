<h2><%= t('.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating mb-3">
    <%= f.email_field :email, placeholder: :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    <%= f.label :email %><br />
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating mb-3">
    <%= f.password_field :password, placeholder: :password, autocomplete: "new-password", class: "form-control" %>
    <%= f.label :password, "#{User.human_attribute_name(:password)} \
        (Mínimo de #{@minimum_password_length} caracteres)" if @minimum_password_length %>
    <i>(Deixe em branco caso não queira alterar sua senha atual)</i><br />
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, placeholder: :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    <%= f.label :password_confirmation %><br />
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :current_password, placeholder: :current_password, autocomplete: "current-password", class: "form-control" %>
    <%= f.label :current_password %> <i>(Precisamos da sua senha atual para confirmar suas alterações)</i><br />
  </div>

  <div class="actions">
    <%= f.submit t('buttons.update'), data: { disable_with: t('messages.sending') }, class: "btn btn-primary mt-3 mb-3" %>
  </div>
<% end %>

<p><%= button_to t('buttons.cancel_my_account'), registration_path(resource_name), data: { confirm: t('messages.are_you_sure?'), disable_with: t('messages.sending') }, method: :delete, class: "btn btn-primary mt-3 mb-3" %></p>

<%= link_to t('links.go_back'), :back, class: "btn btn-outline-primary mt-3 mb-3" %>
