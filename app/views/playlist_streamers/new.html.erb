<h1><%= t('.title') %></h1>

<%= render "shared/errors", resource: @playlist_streamer %>

<%= form_with model: [@playlist, @playlist_streamer] do |f| %>
  <div class="form-floating mb-3">
    <%= f.collection_check_boxes :streamer_ids, @streamers, :id, :name %>
    <%= f.label :streamer_id, Streamer.model_name.human%>
  </div>

  <%= f.submit 'Associar Streamer', class: "btn btn-primary mt-3 mb-3" %>
<% end %>

