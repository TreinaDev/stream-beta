<h1><%= t('.title') %></h1>

<% if @streamers.present? %>
  <% @streamers.each do |streamer| %>
    <ul>
      <li><%= link_to streamer.name, streamer_path(streamer) %></li>
    </ul>
  <% end %>
<% else %>
  <p>Ainda não há streamers cadastrados</p>
<% end %>

<% if current_user&.admin? %>
  <%= link_to 'Novo Streamer', new_streamer_path %>
<% end %>

<div><%= link_to 'Voltar', :back %></div>

