<%= form_with model: @subscription_plan do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :value %>
    <%= f.number_field :value %>
  </div>

  <%= f.submit %>
<% end %>
