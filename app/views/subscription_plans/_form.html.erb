<%= form_with model: @subscription_plan do |f| %>
  <div class="form-floating mb-3">
    <%= f.text_field :title, placeholder: :title, class: "form-control" %>
    <%= f.label :title %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_field :description, placeholder: :description, class: "form-control" %>
    <%= f.label :description %>
  </div>
  <div class="form-floating mb-3">
    <%= f.number_field :value, placeholder: :value, class: "form-control" %>
    <%= f.label :value %>
  </div>
  <div class="form-check">
    <%= f.radio_button :plan_type, "playlist", checked: true, class: "form-check-input" %>
    <%= f.label :plan_type_playlist, t('playlist'), class: "form-check-label" %>
  </div>
  <div class="form-check">
    <%= f.radio_button :plan_type, "streamer", class: "form-check-input" %>
    <%= f.label :plan_type_streamer, t('streamer'), class: "form-check-label" %>
  </div>

  <%= f.submit class: "btn btn-primary mt-3 mb-3" %>
<% end %>
