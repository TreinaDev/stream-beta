<%= form_with model: @subscription_plan do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :value %>
    <%= f.number_field :value %>
  </div>
  <div class: "form-check">
    <%= f.radio_button :plan_type, "playlist", checked: true, class: "form-check-input" %>
    <%= f.label :plan_type_playlist, t('playlist'), class: "form-check-label" %>
  </div>
  <div class: "form-check">
    <%= f.radio_button :plan_type, "streamer", class: "form-check-input" %>
    <%= f.label :plan_type_streamer, t('streamer'), class: "form-check-label" %>
  </div>

  <%= f.submit %>
<% end %>
